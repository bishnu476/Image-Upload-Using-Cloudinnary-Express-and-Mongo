<form action="/upload" method="post" enctype="multipart/form-data">
    <div class="image-upload-form-container">
        <div>
            <label for="categories">Select list (select one):</label>
            <select class="form-control" name="categories" id="categories">
                <option name="categories" value="night">Night</option>
                <option name="categories" value="portrait">Portrait</option>
                <option name="categories" value="landscape">Landscape</option>
                <option name="categories" value="sports">Sports</option>
            </select>
            <div>
                <label for="album_name"> Album Name </label>
                <input type="text" name="album_name" id="album_name">
            </div>
            <div>
                <label for="title"> Title </label>
                <input type="text" name="title" id="title">
            </div>
            <div>
                <label for="image"> Image </label>
                <input type="file" name="image" id="image">
            </div>
        </div>
        <button type="submit">Submit</button>
    </div>
</form>